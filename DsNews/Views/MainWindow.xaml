<Window x:Class="DsNews.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DsNews"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="300" x:Name="QueryTextBox" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <Button Content="Search" Width="100" Click="SearchButton_Click"/>
        </StackPanel>
        <ListBox ItemsSource="{Binding Articles}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="0,0,0,1" BorderBrush="Gray" Padding="8">
                        <StackPanel>
                            <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="{Binding Description}" TextTrimming="CharacterEllipsis" MaxHeight="48"/>
                            <TextBlock Text="{Binding Source}" FontStyle="Italic" FontSize="12"/>
                            <TextBlock Text="{Binding PublishedAt}" FontSize="11"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>
